<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raviteja.crudjson.Creation">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER UR DETAILS"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#f1bbbb" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_nameCreate"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="68dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:hint="name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textView4"
        android:layout_marginEnd="33dp"
        android:layout_alignBaseline="@+id/editText_nameCreate"
        android:layout_alignBottom="@+id/editText_nameCreate"
        android:layout_toStartOf="@+id/editText_nameCreate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_emailCreate"
        android:layout_below="@+id/editText_nameCreate"
        android:layout_alignStart="@+id/editText_nameCreate"
        android:layout_marginTop="26dp"
        android:layout_alignEnd="@+id/editText_nameCreate"
        android:hint="email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/editText_emailCreate"
        android:layout_alignBottom="@+id/editText_emailCreate"
        android:layout_alignEnd="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/button_create"
        android:onClick="creationButton"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECK"
        android:id="@+id/button_checkingSDCard"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button_create"
        android:layout_marginBottom="35dp"
        android:onClick="checkSDCard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SD CARD CHECK "
        android:id="@+id/textView_SDCardCheck"
        android:layout_above="@+id/button_checkingSDCard"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp"
        android:layout_alignEnd="@+id/editText_emailCreate" />
</RelativeLayout>
